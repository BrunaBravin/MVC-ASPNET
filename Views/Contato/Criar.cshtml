@model ASP.NETMVC.Models.Contato //não é um enumerable como na index.cshtml pq estou trabalhando com um só e não com uma lista

@{
    ViewData["Title"] = "Criar novo contato";
}

<h1>Criar novo contato</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar"> @*manda para o Criar POST*@
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" id="telefone" placeholder="(99) 99999-9999" maxlength="15"/>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>

<script>
    function mascaraTelefone(event) {
        const telefone = event.target.value
            .replace(/\D/g, '') // Remove caracteres não numéricos
            .replace(/^(\d{2})(\d)/g, '($1) $2') // Coloca parênteses em volta dos dois primeiros dígitos
            .replace(/(\d)(\d{4})$/, '$1-$2'); // Coloca hífen entre o quinto e o sexto dígitos
        event.target.value = telefone;
    }

    const inputTelefone = document.getElementById('telefone');
    inputTelefone.addEventListener('input', mascaraTelefone);
</script>